---
import NavBar from '../components/NavBar.astro';
// Importar estilos globales en el layout es un patrón recomendado
// (Astro los bundlea automáticamente).
// https://docs.astro.build/en/guides/styling/#global-stylesheets
import '../styles/global.css';

import HeaderDisplayAd from '../components/ads/HeaderDisplayAd.astro';
// Si lo tienes en src/components/ads/HeaderDisplayAd.astro,
// cambia la ruta a '../components/ads/HeaderDisplayAd.astro'

interface Props {
  pageTitle?: string;
  pageDescription?: string;
}

const {
  pageTitle = 'Cartas Rápidas – Reclamaciones y Bajas (ES)',
  pageDescription = 'Genera cartas legales claras y listas para enviar.',
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <NavBar />
    <HeaderDisplayAd />
    <main>
      <slot />
    </main>
  </body>
</html>
