const pageDescription =
  'Aviso legal, condiciones de uso, limitación de responsabilidad y transparencia publicitaria del sitio Cartas Rápidas.';
const lastUpdated = 'noviembre de 2025';
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <div class="cr-main">
    <article class="cr-guide-page">
      <div class="cr-guide-content">
        <header class="cr-guide-header">
          <h1 class="cr-guide-title">Aviso legal</h1>
          <p class="cr-guide-disclaimer">Última actualización: {lastUpdated}.</p>
        </header>

        <section class="cr-section">
          <h2 class="cr-section-title">Objeto y alcance</h2>
          <p>
