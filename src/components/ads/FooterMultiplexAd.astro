---
// src/components/ads/FooterMultiplexAd.astro
const isProd = import.meta.env.PROD;
---

<section class="cr-ad cr-ad--footer" aria-label="Publicidad">
  <div class="cr-ad__inner">
    <p class="cr-ad__label">PUBLICIDAD</p>

{isProd && (
  <>
    <script
      is:inline
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8169980958051856"
      crossorigin="anonymous"
    ></script>

    {/* FooterMultiplex */}
    <ins
      class="adsbygoogle"
      style="display:block"
      data-ad-format="autorelaxed"
      data-ad-client="ca-pub-8169980958051856"
      data-ad-slot="4369185183"
    ></ins>

    <script is:inline>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </>
)}
  </div>
</section>
