    <nav class="cr-nav" aria-label="Navegación principal">
      <ul class="cr-nav__list">
        <li class="cr-nav__item">
          <a href="#generador" class="cr-nav__link cr-nav__link--active">Generador</a>
        </li>
        <li class="cr-nav__item">
          <a href="#guias" class="cr-nav__link">Guías</a>
        </li>
